{
	"extends": "@tsconfig/node24/tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2020",
		"esModuleInterop": true,

		"outDir": "dist",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs",
			"moduleResolution": "node"
		}
	},
	"include": ["src/**/*.ts", "test/**/*.ts"],
	"exclude": ["node_modules"]
}
